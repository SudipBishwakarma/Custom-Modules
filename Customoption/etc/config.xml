<?xml version="1.0"?>
<config>
  <modules>
    <Pebble_Customoption>
      <version>0.1.1</version>
    </Pebble_Customoption>
  </modules>
  <frontend>
    <routers>
      <customoption>
        <use>standard</use>
        <args>
          <module>Pebble_Customoption</module>
          <frontName>customoption</frontName>
        </args>
      </customoption>
    </routers>
    <layout>
      <updates>
        <customoption>
          <file>customoption.xml</file>
        </customoption>
      </updates>
    </layout>
  </frontend>
  <global>
    <blocks>
      <customoption>
        <class>Pebble_Customoption_Block</class>
      </customoption>
      <catalog>
        <rewrite>
          <product_view_options_type_select>Pebble_Customoption_Block_Catalog_Product_View_Options_Type_Select</product_view_options_type_select>
        </rewrite>
      </catalog>
    </blocks>
  </global>
</config>